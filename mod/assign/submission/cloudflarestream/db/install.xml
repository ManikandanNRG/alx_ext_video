<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/assign/submission/cloudflarestream/db" VERSION="20251023" COMMENT="XMLDB file for Moodle mod/assign/submission/cloudflarestream"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="assignsubmission_cfstream" COMMENT="Stores Cloudflare Stream video metadata for assignment submissions">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="assignment" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Foreign key to mdl_assign"/>
        <FIELD NAME="submission" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Foreign key to mdl_assign_submission"/>
        <FIELD NAME="video_uid" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Cloudflare Stream video UID"/>
        <FIELD NAME="upload_status" TYPE="char" LENGTH="50" NOTNULL="true" DEFAULT="pending" SEQUENCE="false" COMMENT="Status: pending, uploading, ready, error, deleted"/>
        <FIELD NAME="file_size" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Original file size in bytes"/>
        <FIELD NAME="duration" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Video duration in seconds"/>
        <FIELD NAME="upload_timestamp" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Unix timestamp when upload started"/>
        <FIELD NAME="deleted_timestamp" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Unix timestamp when video was deleted"/>
        <FIELD NAME="error_message" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Error details if upload failed"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="assignment" TYPE="foreign" FIELDS="assignment" REFTABLE="assign" REFFIELDS="id"/>
        <KEY NAME="submission" TYPE="foreign-unique" FIELDS="submission" REFTABLE="assign_submission" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="video_uid" UNIQUE="false" FIELDS="video_uid"/>
        <INDEX NAME="upload_timestamp" UNIQUE="false" FIELDS="upload_timestamp"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="assignsubmission_cfstream_log" COMMENT="Logs events and errors for Cloudflare Stream uploads and playback">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="User ID associated with the event"/>
        <FIELD NAME="assignmentid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Assignment ID"/>
        <FIELD NAME="submissionid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Submission ID"/>
        <FIELD NAME="video_uid" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="Cloudflare video UID"/>
        <FIELD NAME="event_type" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" COMMENT="Event type: upload_success, upload_failure, upload_retry, playback_access, api_error"/>
        <FIELD NAME="error_code" TYPE="char" LENGTH="100" NOTNULL="false" SEQUENCE="false" COMMENT="Error code if applicable"/>
        <FIELD NAME="error_message" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Detailed error message"/>
        <FIELD NAME="error_context" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Additional error context (JSON)"/>
        <FIELD NAME="file_size" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="File size in bytes"/>
        <FIELD NAME="duration" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Video duration in seconds"/>
        <FIELD NAME="retry_count" TYPE="int" LENGTH="5" NOTNULL="false" SEQUENCE="false" COMMENT="Number of retries"/>
        <FIELD NAME="user_role" TYPE="char" LENGTH="50" NOTNULL="false" SEQUENCE="false" COMMENT="User role for playback events"/>
        <FIELD NAME="timestamp" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Unix timestamp of the event"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="assignmentid" TYPE="foreign" FIELDS="assignmentid" REFTABLE="assign" REFFIELDS="id"/>
        <KEY NAME="submissionid" TYPE="foreign" FIELDS="submissionid" REFTABLE="assign_submission" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="event_type" UNIQUE="false" FIELDS="event_type"/>
        <INDEX NAME="timestamp" UNIQUE="false" FIELDS="timestamp"/>
        <INDEX NAME="video_uid" UNIQUE="false" FIELDS="video_uid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
